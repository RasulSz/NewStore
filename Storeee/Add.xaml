<Window x:Class="Store.Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
        Title="Add" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Count : " FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" ></Label>
        <TextBox Grid.Row="1" Name="counter" FontSize="30"></TextBox>
        <Button Grid.Row="2" x:Name="btnn" Height="100" Width="200" Content="Okay" FontSize="30" Click="btnn_Click"></Button>
    </Grid>
</Window>
